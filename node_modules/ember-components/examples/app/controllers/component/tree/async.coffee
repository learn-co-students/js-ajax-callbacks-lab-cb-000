`import Ember from "ember"`

AsyncController = Ember.ObjectController.extend
    words: ['Foo', 'Bar', 'Baz', 'Qux']

    randomWord: ->
        @words[Math.floor(Math.random()*@words.length)]

    actions:
        getChildren: (node, c) ->
            Em.run.later(@, ->
                c.set 'loading', false
                o = Math.floor(Math.random()*@words.length)+1
                if node.get('level') < 4
                    i = 0
                    while i < o
                        node.createChild(title: @randomWord())
                        i++
                else
                    node.emptyChildren()
            , 500)

`export default AsyncController`