`import Ember from "ember"`

Simple = Ember.ObjectController.extend
    message: undefined
    actionsMeta: [
        {classes: ['fa fa-eye'], action: 'eye'}
        {classes: ['fa fa-edit'], action: 'edit'}
        {classes: ['fa fa-trash-o'], action: 'delete'}
    ]
    init: ->
        #TODO: Import EC instead
        family = Em.EC.TreeNode.create({title: 'Family'})
        #1st level
        suz = family.createChild {title: 'Susan'}
        lud = family.createChild {title: 'Luda'}

        @set 'model', family

    actions: 
        edit: (actionView) ->
            @set 'message', "Editing #{actionView.get('model.title')}"
        delete: (actionView) ->
            @set 'message', "Deleting #{actionView.get('model.title')}"
        eye: (actionView) ->
            @set 'message', "Looking at #{actionView.get('model.title')}"
            actionView.toggleProperty 'sticky'

`export default Simple`