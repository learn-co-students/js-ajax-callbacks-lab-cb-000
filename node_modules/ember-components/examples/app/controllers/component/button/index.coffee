`import Ember from "ember"`

Controller = Ember.Controller.extend
    message: undefined

    actions:
        onClick: ->
            @set 'message', 'Clicked!'

        makeAsync: (setPromise) ->
            setPromise new Promise((res, rej) ->
                Ember.run.later(->
                    res("YES")
                , 1500)
            )

        makeAsyncFailed: (setPromise) ->
            setPromise new Promise((res, rej) ->
                Ember.run.later(->
                    rej("Server error...")
                , 1500)
            )

`export default Controller`